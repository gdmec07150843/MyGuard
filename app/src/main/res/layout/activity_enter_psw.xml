<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context="cn.edu.gdmec.s07150843.myguard.m9advancedtools.EnterPswActivity">
  <ImageView
      android:layout_width="80dp"
      android:layout_height="80dp"
      android:id="@+id/imgv_appicon_enterpsw"
      android:layout_gravity="center_horizontal"
      />
    <TextView
        android:id="@+id/tv_appname_enterpsw"
        style="@style/wrapcontent"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10dp"
        android:textColor="@color/dark_gray"
        android:textSize="20sp"
        android:textScaleX="1.2"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        android:background="@drawable/coner_white_rec"
        android:id="@+id/ll_enterpsw"
        >
         <ImageView
             android:layout_width="wrap_content"
             android:layout_height="match_parent"
             android:layout_weight="0.5"
             android:background="@drawable/enterpsw_icon"
             />
       <EditText
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:id="@+id/et_psw_enterpsw"
           android:layout_weight="3"
           android:hint="请输入防盗密码"
           android:inputType="textPassword"
           android:background="@null"

           />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:id="@+id/imgv_go_enterpsw"
            android:background="@drawable/go_greenicon"
            />
    </LinearLayout>
</LinearLayout>
